<center>
  <h1>$user.getUsername()</h1>
  <h1>$sub.getName()</h1>
  <form action="/$user.getUsername()/subgettit/$sub.getName()/new-post-success" method="post">
    <h1>Type of Post</h1>
    <label for="glyph">Select a type</label>
    <select name="type">
      <option value="text">Text</option>
      <option value="link">Link</option>
    </select>
    <label for="glyph">Theme</label>
      <select name="glyph">
        <option value="glyphicon glyphicon-film">Film</option>
        <option value="glyphicon glyphicon-piggy-bank">Animals</option>
        <option value="glyphicon glyphicon-camera">Photography</option>
        <option value="glyphicon glyphicon-heart">Dating</option>
        <option value="glyphicon glyphicon-globe">Travel</option>
        <option value="glyphicon glyphicon-music">Music</option>
        <option value="glyphicon glyphicon-globe">World News</option>
        <option value="glyphicon glyphicon-pencil">Writing</option>
        <option value="glyphicon glyphicon-phone">Tech</option>
        <option value="glyphicon glyphicon-tree-conifer">Nature</option>
        <option value="glyphicon glyphicon-asterisk">Miscellaneous</option>
      </select>
    <label for="title">Title</label>
    <input type="text" name="title" value="">
    <label for="content">Provide link or content</label>
    <input type="textarea" name="content" value="">
    <button type="submit" name="button">Submit post</button>
  </form>
</center>
